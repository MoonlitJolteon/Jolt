<body {{{background}}}>
  <div>

    <img src={{avatarSource}} id="avatar" {{#if
      teamExists}}{{else}}style="display: block !important; margin-left: auto !important; margin-right: auto !important;"
      {{/if}}>
    {{#if teamExists}}
    <div id="team-info" class="inline" {{{panel}}}>
      <img src={{logoSource}} id="team-logo">
      <h>
        Team: {{teamName}}<br>
        {{#if score.mmr}}
        MMR: {{score.score}}<br>
        {{else}}
        Score: {{score.score}}<br>
        {{/if}}
        W/L: {{teamWL}}<br>
        Oculus Username:<br>
        {{username}}
      </h>
      {{#if teamExists}}
      <img src={{divisionURL}} id="division-logo" class="inline">
      {{/if}}
    </div>
    {{else}}
    {{#if country}}
    <img src=https://flagcdn.com/108x81/{{country}}.png id="country-flag" class="inline">
    {{/if}}
    {{/if}}
    <div id="player-info" {{{panel}}}>
      {{#if teamExists}}
      {{#if country}}
      <img src=https://flagcdn.com/108x81/{{country}}.png id="country-flag" class="inline"
        style="margin-top: 50px !important;">
      {{/if}}
      {{/if}}
      {{#if playerStatsError.error}}
      <p style="text-align: center; margin-top: -5px;">{{{playerStatsError.error}}}</p>
      {{else}}
      <br style="line-height: 0.5em;">
      <h5 id="title">Pub Stats{{#if country}}{{else}} for {{username}}{{/if}} (Powered By Ignite Metrics)</h3>
        <table class="player-stats">
          <tr class="stat-names">
            <th class="stat-names">Points</td>
            <th class="stat-names">Games</td>
            <th class="stat-names">Wins</td>
            <th class="stat-names">Win Rate</td>
            <th class="stat-names">Avg. Saves/Game</td>
          </tr>
          <tr class="stat values">
            <td class="stat">{{playerStats.total_points}}</td>
            <td class="stat">{{playerStats.game_count}}</td>
            <td class="stat">{{playerStats.total_wins}}</td>
            <td class="stat">{{win_rate}}</td>
            <td class="stat">{{save_rate}}</td>
          </tr>
        </table>
        <table class="player-stats">
          <tr class="stat-names">
            <th class="stat-names">Goals</td>
            <th class="stat-names">Shots Taken</td>
            <th class="stat-names">3-Pointers</td>
            <th class="stat-names">2-Pointers</td>
            <th class="stat-names">Assists</td>
            <th class="stat-names">Saves</td>
          </tr>
          <tr class="stat values">
            <td class="stat">{{playerStats.total_goals}}</td>
            <td class="stat">{{playerStats.total_shots_taken}}</td>
            <td class="stat">{{playerStats.total_3_pointers}}</td>
            <td class="stat">{{playerStats.total_2_pointers}}</td>
            <td class="stat">{{playerStats.total_assists}}</td>
            <td class="stat">{{playerStats.total_saves}}</td>
          </tr>
        </table>
        {{/if}}
    </div>
</body>