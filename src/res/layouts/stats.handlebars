    }

    table {
      margin-top: -10px;
    }

    tr {
      background-color: rgba(187, 177, 87, 0.836);
    }

    .stat {
      border-right: 4px solid black;
      border-left: 4px solid black;
      border-bottom: 4px solid black;
      font-size: 23px;
      width: 100%;
    }

    .stat-names {
      border: 4px solid black;
      font-size: 23px;
      width: 100%;
