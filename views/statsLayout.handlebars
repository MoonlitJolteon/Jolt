<body {{{background}}}>
  <div>
    <img src={{avatarSource}} id="avatar">
    {{#if teamExists}}
    <div id="team-info" class="inline" {{{panel}}}>
      <img src={{logoSource}} id="team-logo">
      <h>
        Team: {{teamName}}<br>
        {{#if score.mmr}}
        MMR: {{score.score}}<br>
        {{else}}
        Score: {{score.score}}<br>
        {{/if}}
        W/T/L: {{teamWL}}<br>
        Oculus Username:<br>
        {{username}}
      </h>
      <img src={{division}} id="division-logo" class="inline">
    </div>
    {{else}}
    <img src=https://flagcdn.com/108x81/{{country}}.png id="country-flag" class="inline">
    {{/if}}
    <div id="player-info" {{{panel}}}>
      {{#if teamExists}}
      <img src=https://flagcdn.com/108x81/{{country}}.png id="country-flag" class="inline">
      {{/if}}
      {{#if playerStatsError.error}}
      <h>{{playerStatsError.error}}</h>
      {{else}}
      <table class="player-stats"> &nbsp;&nbsp;Pub Stats
        <tr class="stat-names">
          <th class="stat-names">Level</td>
          <th class="stat-names">Points</td>
          <th class="stat-names">Games</td>
          <th class="stat-names">Wins</td>
          <th class="stat-names">Win Rate</td>
        </tr>
        <tr class="stat values">
          <td class="stat">{{playerStats.Level}}</td>
          <td class="stat">{{playerStats.Points}}</td>
          <td class="stat">{{playerStats.Games}}</td>
          <td class="stat">{{playerStats.Wins}}</td>
          <td class="stat">{{playerStats.Win-Rate}}</td>
        </tr>
      </table>
      <table class="player-stats">
        <tr class="stat-names">
          <th class="stat-names">Goals</td>
          <th class="stat-names">Shots Taken</td>
          <th class="stat-names">3-Pointers</td>
          <th class="stat-names">2-Pointers</td>
          <th class="stat-names">Assists</td>
        </tr>
        <tr class="stat values">
          <td class="stat">{{playerStats.Goals}}</td>
          <td class="stat">{{playerStats.Shots-Taken}}</td>
          <td class="stat">{{playerStats.Three-Pointers}}</td>
          <td class="stat">{{playerStats.Two-Pointers}}</td>
          <td class="stat">{{playerStats.Assists}}</td>
        </tr>
      </table>
      {{/if}}
    </div>
</body>