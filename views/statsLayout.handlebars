    #team-info {
      background: #ffffff69;
      border-radius: 8px 30px;
      margin-top: 10px;
      width: 68%;
      height: 150px;
      vertical-align: top;
    }

    #player-info {
      background: #ffffff69;
      border-radius: 8px 30px;
      margin-left: 10px;
      width: 570px;
      height: 275px;
    }

    #avatar {
      border-radius: 50px;
      width: 150px;
      padding: 10px;
    }

    #team-logo {
      border-radius: 15px;
      width: 80px;
      height: 80px;
      padding: 10px;
      float: left;
    }

    #division-logo {
      border-radius: 30px;
      width: 30px;
      height: 30px;
      padding: 9px;
      margin-left: 5px;
      margin-top: 10px;
      float: left;
      background: #505050b9;
    }

    #country-flag {
      border-radius: 20px;
      width: 50px;
      height: 50px;
      padding: 9px;
      margin-right: 10px;
      margin-top: 10px;
      float: right;
      background: #505050b9;
    }

    .inline {
      display: inline-flex;
    }

    .player-stats {
      margin-left: 10px;
      padding-top: 10px;
      width: 10px;
    }

    tr {
      background-color: rgba(187, 177, 87, 0.836);
    }

    .stat {
      border-right: 4px solid black;
      border-left: 4px solid black;
      border-bottom: 4px solid black;
      font-size: 23px;
      width: 100%;
    }

    .stat-names {
      border: 4px solid black;
      font-size: 23px;
      width: 100%;
